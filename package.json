{
  "name": "node-js-tdd-clean-architecture",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.prod.json && npx tscpaths -p tsconfig.prod.json -s ./src -o ./dist",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "start": "NODE_ENV=production node dist/main/server.js",
    "dev": "tsnd --files -r tsconfig-paths/register --respawn --ignore-watch node_modules src/main/server.ts",
    "debug": "NODE_ENV=development tsnd --inspect=0.0.0.0:9222 --nolazy -r tsconfig-paths/register --respawn --ignore-watch node_modules src/main/server.ts",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "yarn run lint --fix",
    "jest:clear": "jest --clearCache",
    "test": "jest --passWithNoTests --silent --runInBand",
    "test:verbose": "jest --passWithNoTests --verbose",
    "test:unit": "yarn test",
    "test:unit:watch": "yarn test --onlyChanged --watch",
    "test:u": "yarn test:unit",
    "test:u:w": "yarn test:unit:watch",
    "test:integration": "yarn test -c jest-integration.config.js --runInBand",
    "test:integration:verbose": "jest --passWithNoTests --verbose -c jest-integration.config.js --runInBand",
    "test:integration:watch": "yarn test:integration --watch",
    "test:i": "yarn test:integration",
    "test:i:w": "yarn test:integration:watch",
    "test:i:v": "yarn test:integration:verbose",
    "test:staged": "yarn test --runInBand --findRelatedTests",
    "test:coverage": "yarn test --coverage",
    "test:ci": "yarn test:coverage && yarn test:i",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.3.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.7",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "git-commit-msg-linter": "^5.0.8",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.0",
    "npm-check": "^6.0.1",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.12.0"
  }
}
